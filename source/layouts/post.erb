<% wrap_layout :layout do %>
  <article class="writing">
    <h1><%= current_page.data.title %></h1>
    <div class="article-details">
      <div class="article-date">
        <i class="fa fa-calendar-o"></i>
        <%= Time.parse(current_page.data.date).strftime('%Y-%m-%d') %>
      </div>
    </div>
    <%= yield %>
  </article>
<% end %>